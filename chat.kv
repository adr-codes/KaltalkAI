#:kivy 2.2.1
BoxLayout:
    orientation: 'vertical'
    padding: dp(10)
    spacing: dp(5)

    ScrollView:
        GridLayout:
            id: chat_history
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(5)

    BoxLayout:
        size_hint_y: None
        height: max(dp(50), min(user_input.height + dp(10), dp(120)))
        spacing: dp(5)

        TextInput:
            id: user_input
            hint_text: "Type your message..."
            multiline: True
            size_hint_x: 0.8
            size_hint_y: None
            height: self.minimum_height
            min_height: dp(50)
            max_height: dp(120)
            padding: (dp(10), dp(10))
            on_text:
                app.adjust_input_height(self, self.text)

        Button:
            text: "Send"
            size_hint_x: 0.15
            height: dp(50)

